<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XCalendar.Views.FirstPage">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments ="Thickness" Android="10, 10, 10, 10" iOS="0" />
    </ContentPage.Padding>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Тестовое задание" FontSize="Large" TextColor="Black" HorizontalOptions="CenterAndExpand" />
            <Label Text="Выполнено: Кравченко Игорем Андреевичем"/>
            <Label Text="{Binding Text}"/>
            <Button Text="Start" Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>